<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="RalewayTextNav" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="optionsMenu" parent="Widget.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="nameTextInGrid" parent="AppTheme">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/defaultText</item>
    </style>

    <style name="descTextInGrid" parent="AppTheme">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/defaultText</item>
    </style>

    <style name="progressBox" parent="AppTheme">
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/defaultTextLight</item>
    </style>

    <style name="transactionDetails" parent="AppTheme">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor" >@color/defaultText</item>
    </style>

    <style name="titleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/oswald_extra_light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="subtitleText" parent="titleText">
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
